<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns:context = "http://www.springframework.org/schema/context"
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans  
     http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
     http://www.springframework.org/schema/context
     http://www.springframework.org/schema/context/spring-context-4.0.xsd">
     
     <context:component-scan base-package="com.learnings.AutoWiredDemo"></context:component-scan>
         
     <bean id="student" class="com.learnings.AutoWiredDemo.Student">
       <property name="id" value="501"></property>
       <property name="name" value="Sagar Yadav"></property>
     </bean>
     
     <bean id="address" class="com.learnings.AutoWiredDemo.Address">
       <property name="city" value="Hyderabad"></property>
       <property name="state" value="Telangana"></property>
       <property name="country" value="India"></property>
     </bean>

</beans>